<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name = "Console" target = "SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %c{1}:%L  - %msg%n"/>
        </Console>
        <RollingFile name = "FileAppender" fileName="log\info.log"  append = "true" filepattern="log\info_%i.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %c{1}:%L  - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="100 KB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>

